datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = []
}

model Article {
  id          Int       @id @default(autoincrement())
  slug        String    @unique
  title       String
  description String
  body        String
  externalId  String?   @unique // Store UUID from import data
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
  tagList     Tag[]
  author      User      @relation("UserArticles", fields: [authorId], onDelete: Cascade, references: [id])
  authorId    Int
  favoritedBy User[]    @relation("UserFavorites")
  comments    Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  body      String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId Int
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId  Int
}

model Tag {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  articles Article[]
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  username   String    @unique
  password   String
  role       String?   @default("user")
  externalId String?   @unique // Store UUID from import data
  active     Boolean   @default(true)
  image      String?   @default("https://api.realworld.io/images/smiley-cyrus.jpeg")
  bio        String?
  articles   Article[] @relation("UserArticles")
  favorites  Article[] @relation("UserFavorites")
  followedBy User[]    @relation("UserFollows")
  following  User[]    @relation("UserFollows")
  comments   Comment[]
  demo       Boolean   @default(false)
}

model ImportJob {
  id             Int           @id @default(autoincrement())
  idempotencyKey String        @unique
  resource       String // "users" | "articles" | "comments"
  status         String        @default("pending") // "pending" | "processing" | "completed" | "failed"
  totalRecords   Int           @default(0)
  successCount   Int           @default(0)
  errorCount     Int           @default(0)
  skippedCount   Int           @default(0)
  filePath       String?
  startedAt      DateTime?
  completedAt    DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @default(now())
  errors         ImportError[]

  @@index([idempotencyKey])
  @@index([status])
  @@index([createdAt])
}

model ImportError {
  id           Int       @id @default(autoincrement())
  importJobId  Int
  importJob    ImportJob @relation(fields: [importJobId], references: [id], onDelete: Cascade)
  recordIndex  Int
  recordData   Json
  errorMessage String
  errorType    String
  createdAt    DateTime  @default(now())

  @@index([importJobId])
}

model ExportJob {
  id             Int       @id @default(autoincrement())
  idempotencyKey String    @unique
  resource       String    // "users" | "articles" | "comments"
  format         String    @default("ndjson") // "ndjson" | "json"
  status         String    @default("pending") // "pending" | "processing" | "completed" | "failed"
  totalRecords   Int       @default(0)
  filePath       String?   // Path to exported file
  downloadUrl    String?   // URL to download the file
  filters        Json?     // Export filters
  fields         Json?     // Fields to include (["id", "title", "body"])
  startedAt      DateTime?
  completedAt    DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @default(now())

  @@index([idempotencyKey])
  @@index([status])
  @@index([createdAt])
}
